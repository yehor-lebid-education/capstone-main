model Course {
  // Main fields
  id          String   @id @default(cuid())
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
  // Meta
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // Relations
  userId      String
  /// [CourseSectionsType]
  sections    Json
}

model LessonContent {
  id       String   @id @default(cuid())
  // Lesson content
  content  String
  // Lesson quiz
  question String
  options  String[]
  answer   String
  // References
  userId   String
}

